<?xml version="1.0" encoding="utf-8" ?>
<component name="VideoScene" extends="Group">
    <script type="text/brightscript" uri="VideoScene.brs" />
    
    <children>
        <Video
            id="videoPlayer"
            width="1920"
            height="1080"
            />
        <Rectangle
            id="backdrop"
            width="1920"
            height="150"
            color="#000000"
            opacity="0.8"
            />
